<%- include('../components/header') -%>

<h1 class="font-bold text-4xl my-6 text-gray-700 text-center">Quizzes</h1>

<section class="flex flex-wrap">
  <% quizzes.map((quiz) => { %>
  <div class="max-w-sm rounded m-4 flex-col w-1/3 overflow-hidden shadow-lg">
    <div class="px-6 py-4">
      <div class="font-bold text-xl text-gray-700 mb-2">
        <%= quiz.title %>
      </div>
      <p class="text-gray-700 text-base">
        <%= quiz.description %>
      </p>
    </div>
    <div class="px-6 py-4">
      <a
        href="<%= `/quiz/${quiz.id}` %>"
        class="shadow bg-teal-500 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
      >
        Start
      </a>
    </div>
  </div>
  <% }) %>
</section>

<%- include('../components/footer') -%>
